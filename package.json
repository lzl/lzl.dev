{
  "name": "lzl.dev",
  "version": "0.4.0",
  "scripts": {
    "start": "NODE_ENV=production npm run build:css && npx @11ty/eleventy",
    "dev": "npm run watch:css & npx @11ty/eleventy --serve",
    "build:css": "postcss assets/tailwind.css -o assets/index.css",
    "watch:css": "postcss assets/tailwind.css -o assets/index.css -w",
    "postinstall": "netlify-lambda install"
  },
  "author": "LZL",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@tailwindcss/ui": "^0.3.0",
    "autoprefixer": "^9.8.0",
    "postcss-cli": "^7.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "tailwindcss": "^1.4.6"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "luxon": "^1.24.1",
    "netlify-lambda": "^1.6.3",
    "postcss-import": "^12.0.1"
  }
}
