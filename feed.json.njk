---
permalink: /feed.json
---
{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ site.title }}",
    "description": "{{ site.description }}",
    "home_page_url": "{{ site.url }}",
    "feed_url": "{{ "/feed.json" | url | absoluteUrl(site.url) }}",
    "icon": "{{ "/assets/primitive.jpg" | url | absoluteUrl(site.url) }}",
    "favicon": "{{ "/assets/favicon.ico" | url | absoluteUrl(site.url) }}",
    "expired": false,
    "author": {
        "name": "{{ site.author.name }}",
        "url": "{{ site.url }}",
        "avatar": "{{ "/assets/primitive.jpg" | url | absoluteUrl(site.url) }}"
    },
    "items": [{% for post in collections.feed | reverse | limit(100) %}{% if post.data.published %}{% set absolutePostUrl %}{{ post.url | url | absoluteUrl(site.url) }}{% endset %}
        {
            "id": "{{ absolutePostUrl }}",
            "url": "{{ absolutePostUrl  }}",
            "date_published": "{{ post.date | feedDateTime }}",
            "title": "{{ post.data.title | strip }}",
            "content_html": "{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | strip | safe }}"
        }{% if loop.last == false %},{% endif %}{% endif %}{% endfor %}
    ]
}
